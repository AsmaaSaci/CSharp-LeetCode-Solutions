public class Solution {
    public string MaximumTime(string time) {
        char[] t = time.ToCharArray();

        for (int i = 0; i < t.Length; i++)
        {
            if(t[i] == '?')
            {
                switch (i)
                {
                    case 0:
                        {
                            t[i] = t[i + 1] > '3' && t[i + 1] != '?' ? '1' : '2';
                            break;
                        }
                    case 1:
                        {
                            t[i] = t[i - 1] == '2' ? '3' : '9';
                            break;
                        }
                    case 3:
                        {
                            t[i] = '5';
                            break;
                        }
                    case 4:
                        {
                            t[i] = '9';
                            break;
                        }

                }
            }
        }

        return new string(t);
    }
}
