public class Solution {
    public string MakeFancyString(string s) {
        var sb = new StringBuilder();
        for(int i=0;i<s.Length;i++) {
            if(i - 2 >= 0 && s[i - 1] == s[i] && s[i - 2] == s[i]) {
                continue;
            }
            sb.Append(s[i]);
        }
        return sb.ToString();
    }
}
