public class Solution {
    public int MinimumOperations(int[][] grid) {
        int increments = 0;
        int i = 1;
        while(i < grid.Length)
        {
            for(int j = 0; j < grid[i].Length; j++)
            {
                int diff = grid[i - 1][j] - grid[i][j];
                if(diff >= 0)
                {
                    grid[i][j] += diff + 1; 
                    increments += diff + 1;
                }
            }
            i++;
        }

        return increments;
    }
}
