public class Solution {
    public int MissingInteger(int[] nums) {
        int sum = nums[0];
        for(int i = 1; i < nums.Length; i++){
            if((nums[i] == nums[i - 1] + 1))
                sum += nums[i];
            else
                break;
        }
        Array.Sort(nums);
        int left = 0, right = nums.Length - 1, mid;
        while(left <= right){
            mid = left + (right - left) / 2;
            if(nums[mid] == sum){
                left = mid;
                right = nums.Length - 1;
                sum++;
            }
            if(nums[mid] < sum)
                left = mid + 1;
            else
                right = mid - 1;
        }
        return sum;
    }
}
