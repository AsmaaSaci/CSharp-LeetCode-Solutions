public class Solution {
    public int LargestSumAfterKNegations(int[] nums, int k) { 
        Array.Sort(nums);
       
       for(int i=0;i<nums.Length;i++)
       {
         if(nums[i]<0 && k>0)
         {
            nums[i] = - nums[i];
            k--;
         }
       }
       int sum = nums.Sum();
       Array.Sort(nums);
       int a = nums[0];

       if(k%2!=0)
       {
        return sum-=2*a;
       }
       return sum;

        
    }
}
