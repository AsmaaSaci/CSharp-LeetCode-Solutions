public class Solution {
    public long ShiftDistance(string s, string t, int[] n, int[] p) {
        long [,] a= new long [26,26];
        for (int i=0; i< 26; i++){
            for (int j=0; j<26; j++){                
                if(i==j){a[i,j]=0;}
                else{                    
                    if(i<j){
                        long c=0;
                        for(int l=i; l<j; l++){
                            c+=n[l];
                        }
                        a[i,j]=c;
                        c=0;
                        for (int l=i; l>=0; l-- ){
                            c+=p[l];
                        }
                        for(int l=25;l>j; l--){
                            c+=p[l];
                        }
                        a[i,j]=Math.Min(c, a[i,j]);
                    }
                    else{
                         long c=0;
                        for (int l=i; l>j; l-- ){
                            c+=p[l];
                        }
                        a[i,j]=c;
                          c=0;
                        for(int l=i; l<26; l++){
                            c+=n[l];
                        }
                        for(int l=0; l< j; l++){
                            c+=n[l];
                        }
                      a[i,j]=Math.Min(a[i,j],c);
                    }
                }
            }
        }
        long ans=0;
   for(int i=0; i< s.Length; i++){
    int x=s[i]-'a';
    int y=t[i]-'a';
    Console.Write(x+" "+y+" "+" ");
    if(x!=y){ans+=a[x,y];}
   }

    
    return ans;
    }
}
