public class Solution {
    public int CountKConstraintSubstrings(string s, int k) {
        
        // Raj Thomas 15th Aug 2025 11:21PM IST

        // main case
        int resultCount = 0;
        for(int i = 0; i < s.Length; i++) {

            int countZero = 0;
            int countOne = 0;
            for(int j = i; j < s.Length; j++) {
                if(s[j] == '0') countZero++;
                else countOne++;

                if(countZero <= k || countOne <= k) {
                    resultCount++;
                }
                else {
                    break;
                }
            }
        }

        return resultCount;
    }
}
