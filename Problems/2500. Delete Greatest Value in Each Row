public class Solution {
    public int DeleteGreatestValue(int[][] grid) {
        int rows = grid.Length, cols = grid[0].Length;
        for(int i = 0; i < rows; i++)
        {
            Array.Sort(grid[i]);
        }

        int maxSum = 0;
        for(int j = 0; j < cols; j++)
        {
            int curMax = grid[0][j];
            for(int i = 1; i < rows; i++)
            {
                curMax = Math.Max(curMax, grid[i][j]);
            }

            maxSum += curMax;
        }

        return maxSum;
    }
}
