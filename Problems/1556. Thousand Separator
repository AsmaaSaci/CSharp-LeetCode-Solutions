public class Solution {
    public string ThousandSeparator(int n) {
        var sb = new StringBuilder(n.ToString());
        int count = 1;
        for(int i = sb.Length - 1; i > 0; i--){
            if(count == 3){
                sb.Insert(i , '.');
                count = 1;
            }
            else{
                count++;
            }
        }
        return sb.ToString();
    }
}
