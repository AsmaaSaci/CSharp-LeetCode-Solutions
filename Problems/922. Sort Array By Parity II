public class Solution {
    public int[] SortArrayByParityII(int[] nums) {
        int[] results = new int[nums.Length];
        int evenIndex = 0;
        int oddIndex = 1;

        for(int i=0; i<nums.Length; i++)
        {
            if(nums[i] % 2 == 0){
                results[evenIndex] = nums[i];
                evenIndex +=2;
            } else {
                results[oddIndex] = nums[i];
                oddIndex +=2;
            }

        }

        return results;
    }
}
