public class Solution {
    public string GetSmallestString(string s) {
        char[] arr = s.ToCharArray();
        for (int i = 0; i < arr.Length-1; i++)
        {
            int x = (arr[i]-'0') % 2;
            int y = (arr[i+1]-'0') % 2;
            if (x == y && arr[i] > arr[i+1])
            {
                (arr[i],arr[i+1]) = (arr[i+1],arr[i]);
                break;
            }
        }
        return new string(arr);
    }
}
