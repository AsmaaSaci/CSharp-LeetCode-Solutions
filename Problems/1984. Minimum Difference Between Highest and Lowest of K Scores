public class Solution {
    public int MinimumDifference(int[] nums, int k) {
        if (nums.Length <= 1) return 0;
        Array.Sort(nums);
        int min = int.MaxValue;
        for (int i = 0; i < nums.Length - k + 1; i++) {
            int diff = nums[i + k - 1] - nums[i];
            min = Math.Min(min, diff);
        }
        return min;
    }
}
