public class Solution {
    public int MinStartValue(int[] nums) {
        int startValue = 1;

        if (nums[0] < 0) {
            startValue = nums[0] * -1 +1;
        }

        for (int i = 1; i < nums.Length; i++)
        {

            nums[i] = nums[i - 1] + nums[i];
            if (nums[i] + startValue == 0)
                startValue++;
            if (nums[i] + startValue < 0)
            {
                startValue += (nums[i]+ startValue) * -1 + 1;
            }
        }

        return startValue;
    }
}
