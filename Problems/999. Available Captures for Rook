public class Solution {
    public int NumRookCaptures(char[][] board) {
        var count=0;
        int row=0,col=0;
        for(int i=0;i<board.Length;i++)
        {
            for(int j=0;j<board.Length;j++)
            {
                if(board[i][j]=='R')
                {
                    row=i;
                    col=j;
                    break;
                }
            }
        }
        for(int i=row;i>=0;i--)
        {
            if(board[i][col]=='B') break;
            if(board[i][col]=='p')
            {
                count++;
                break;
            }
        }
        for(int i=row;i<8;i++)
        {
            if(board[i][col]=='B') break;
            if(board[i][col]=='p')
            {
                count++;
                break;
            }
        }
        for(int i=col;i<8;i++)
        {
            if(board[row][i]=='B') break;
            if(board[row][i]=='p')
            {
                count++;
                break;
            }
        }
        for(int i=col;i>=0;i--)
        {
            if(board[row][i]=='B') break;
            if(board[row][i]=='p')
            {
                count++;
                break;
            }
        }
        return count;
    }
}
