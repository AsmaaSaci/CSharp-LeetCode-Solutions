public class Solution {
    public long MaxTotalValue(int[] nums, int k) {
        if(nums.Length == 1) return 0;                
        long min = nums[0];
        long max = nums[0];
        foreach(var n in nums)
        {
            if(min>n) min = n;
            if(max<n) max = n;
        }        
        return (max-min)*k;
    }
}
