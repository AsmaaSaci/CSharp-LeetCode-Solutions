public class Solution {
    public string DefangIPaddr(string address) {
        StringBuilder result = new StringBuilder();

        for(int i = 0; i < address.Length; i++) {
            char character = address[i];
            if(character == '.') {
                result.Append("[.]");
            } else {
                result.Append(character);
            }
        }

        return result.ToString();
    }
}
