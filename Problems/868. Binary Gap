public class Solution {
    public int BinaryGap(int n) {
        int longest = 0, l = 0, r = 0;
        string binary = Convert.ToString(n, 2);
        int distance = 0;

        for (int i = 0; i < binary.Length; i++)
        {
            if (binary[i] == '0') { r++; continue; }
            if (binary[i] == '1')
            {
                distance = r - l;
                if (distance > longest) { longest = distance; }
                l = r = i;
            }
            r++;
        }

        return longest;
    }
}
