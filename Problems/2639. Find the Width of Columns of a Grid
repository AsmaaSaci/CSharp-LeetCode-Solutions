public class Solution {
    public int[] FindColumnWidth(int[][] grid) {
        int m = grid.Length;        // number of rows
        int n = grid[0].Length;     // number of columns
        int[] ans = new int[n];

        for (int i = 0; i < n; i++) {
            int max = 0;
            for (int j = 0; j < m; j++) {
                int val = grid[j][i];
                int length = val.ToString().Length;  // count digits including sign
                max = Math.Max(max, length);
            }
            ans[i] = max;
        }

        return ans;
    }
}
