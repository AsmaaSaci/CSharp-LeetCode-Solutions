public class Solution {
    public int MinimumLevels(int[] possible) {
        int len = possible.Length;
        int maxSum = -1;

        int[] p = new int[len];
        p[0] = possible[0] == 1 ? 1 : -1;

        for(int i = 1; i < len; i++)
        {
            p[i] = p[i-1] + (possible[i] == 1 ? 1 : -1);
        }

        for(int i = 0; i < len-1; i++)
        {
            if(p[len-1] <2* p[i])
                return i+1;
        }

        return maxSum;
    }
}
