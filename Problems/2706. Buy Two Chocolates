public class Solution {
    public int BuyChoco(int[] prices, int money) {
        int min1 = 9999999;
        int min2 = 9999999;

        foreach(int price in prices) {
            if(price < min1) {
                min2 = min1;
                min1 = price;
            } else if(price < min2) {
                min2 = price;
            }
        }

        int leftover = money - (min1 + min2);

        return leftover < 0 ? money : leftover;
    }
}
