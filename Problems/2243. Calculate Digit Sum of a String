public class Solution {
    public string DigitSum(string s, int k) {
        if (s.Length <= k)
            return s;

        string result = "";
        int cur = 0;
        for (int i = 0; i < s.Length;i++) {
            if (i % k == 0 && i > 0) {
                result += cur.ToString();
                cur = 0;
            }
            cur += s[i] - '0';
        }

        result += cur.ToString();

        return DigitSum(result, k);
    }
}
