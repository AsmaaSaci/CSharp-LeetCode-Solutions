public class Solution {
    public bool StrongPasswordCheckerII(string password) {
        if(password.Length < 8)
            return false;


        bool[] checkList = new bool[4];
        char lastChar = ' ';
        for(int i = 1; i <= password.Length; i++)
        {
            char p = password[i-1];
            if(i < password.Length)
                if(password[i].Equals(p))
                    return false;

            if(char.IsLower(p))
                checkList[0] = true;
            else if(char.IsUpper(p))
                checkList[1] = true;
            else if(char.IsDigit(p))
                checkList[2] = true; 
            else if(p.Equals('!') || p.Equals('@')|| p.Equals('#') || p.Equals('
```) 
            || p.Equals('^') || p.Equals('&') || p.Equals('*') || p.Equals('%') 
            || p.Equals('(')  || p.Equals(')')  || p.Equals('-') || p.Equals('+'))
                 checkList[3] = true;
        }


        foreach(bool check in checkList)
            if(!check)
                return false;

        return true;
    }
}
