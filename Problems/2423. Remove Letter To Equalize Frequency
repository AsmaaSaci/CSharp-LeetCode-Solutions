public class Solution {
    public bool EqualFrequency(string word)
    {
        int[] c = new int[26];
        foreach(var x in word)
            c[x-'a']++;
        
        for(int i=0;i<26;i++)
        {
            if(c[i]>0)
            {
                c[i]--;
                if(IsAllEqual(c))
                    return true;
                c[i]++;
            }
        }

        return false;
    }

    public bool IsAllEqual(int[] c)
    {
        int i=0;
        while(c[i] == 0)
            i++;
        
        int last = c[i];
        for(i=1;i<26;i++)
            if(c[i] != 0 && c[i] != last)
                return false;
        
        return true;
    }
}
