public class Solution {
    public string RemoveDigit(string number, char digit) {
        int a=-1;
        for(int i=0;i<number.Length;i++){
            if(number[i]==digit){
                if(i+1<number.Length && (number[i+1]-'0')>(number[i]-'0')){
                    a=i;
                    break;
                }
            }
        }
        if(a==-1){
            for(int i=0;i<number.Length;i++){
                 if(number[i]==digit){
                    a=i;
                    
                 }
            }
        }
      string ans="";
      for(int i=0;i<number.Length;i++){
        if(i!=a){
            ans+=number[i];
        }
      }
      return ans;
    }
}
