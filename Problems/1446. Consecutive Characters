public class Solution {
    public int MaxPower(string s) {
        
        int maxLength = 1;
        int currLength = 1;
        
        for(int i = 1; i < s.Length; i++) {
            if(s[i] == s[i-1]) {
                currLength++; // add to current window
            } else {
                currLength = 1; // reset
            }
            maxLength = Math.Max(maxLength, currLength);
        }

        return maxLength;
    }
}
