public class Solution
{
    public string LexSmallest(string s)
    {
        var smallestString = s;
        for (int i = 0; i < s.Length; i++)
        {
            var revStr = ReverseSubarray(s, 0, i);
            if (revStr.CompareTo(smallestString) < 0)
            {
                smallestString = revStr;
            }
        }
        for (int i = 0; i < s.Length; i++)
        {
            var revStr = ReverseSubarray(s, i, s.Length - 1);
            if (revStr.CompareTo(smallestString) < 0)
            {
                smallestString = revStr;
            }
        }

        return smallestString;
    }
    private string ReverseSubarray(string input, int startIndex, int endIndex)
    {
        char[] chars = input.ToCharArray();
        while (startIndex < endIndex)
        {
            char temp = chars[startIndex];
            chars[startIndex] = chars[endIndex];
            chars[endIndex] = temp;
            startIndex++;
            endIndex--;
        }

        return new string(chars);
    }
}
