public class Solution {
    public int LongestBalanced(int[] nums) {
        int n = nums.Length;
        int ans = 0;
        for (int i = 0; i < n; ++i) {
            var e = new HashSet<int>();
            var o = new HashSet<int>();
            for (int j = i; j < n; ++j) {
                int v = nums[j];
                if ((v & 1) == 0) e.Add(v); else o.Add(v);
                if (e.Count == o.Count) ans = Math.Max(ans, j - i + 1);
            }
        }
        return ans;
    }
}
