public class Solution {
    public bool AreAlmostEqual(string s1, string s2) {
        List<char> sList = new List<char>(s1);
        int count = 0;

        //check if they have the same set of letters
        for(int i=0; i<s1.Length; i++)
        {
            if(sList.Contains(s2[i])) sList.Remove(s2[i]);
        }
        //if they are not anagrams returne false
        if (sList.Count > 0) return false;

        //compare them position by position
        for(int j=0; j<s1.Length; j++)
        {
            if(s1[j] != s2[j]) count++;
            //if they difference is more than 2 return false
            if (count > 2) return false;
        }
        // otherwise if count == 0 or 2 return true
        return count == 0 || count == 2;
    }
}
