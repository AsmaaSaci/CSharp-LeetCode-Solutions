public class Solution {
    public bool BackspaceCompare(string s, string t) {
        int i = s.Length - 1;
        int j = t.Length - 1;
        
        int skipS = 0;
        int skipT = 0;

        while (i >= 0 || j >= 0)
        {
            while (i >= 0)
            {
                if (s[i] == '#') { skipS++; i--; }
                else if (skipS > 0) { skipS--; i--; }
                else break;
            }

            while (j >= 0)
            {
                if (t[j] == '#') { skipT++; j--; }
                else if (skipT > 0) { skipT--; j--; }
                else break;
            }

            char c1 = i >= 0 ? s[i] : '\0';
            char c2 = j >= 0 ? t[j] : '\0';

            if (c1 != c2) return false;

            i--;
            j--;
        }

        return true;
    }
}
