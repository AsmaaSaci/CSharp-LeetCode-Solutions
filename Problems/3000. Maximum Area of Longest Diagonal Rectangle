public class Solution {
    public int AreaOfMaxDiagonal(int[][] dimensions)
    {
        double max = -1;
        int maxL = 0;
        int maxW = 0;

        for (int index = 0; index < dimensions.Length; index++)
        {
            int Length = dimensions[index][0];
            int Width = dimensions[index][1];
            double value = Math.Sqrt((Length * Length) + (Width * Width));
            if (value > max)
            {
                max = value;
                maxL = dimensions[index][0];
                maxW = dimensions[index][1];
            }
            else if (value == max && maxL * maxW < Length * Width)
            {
                max = value;
                maxL = dimensions[index][0];
                maxW = dimensions[index][1];
            }
        }

        return maxL * maxW;
    }
}
