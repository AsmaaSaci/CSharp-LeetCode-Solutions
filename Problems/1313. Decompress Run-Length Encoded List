public class Solution {
    public int[] DecompressRLElist(int[] nums)
    {
        var list = new List<int>();
        for (int i = 0; i < nums.Length; i += 2)
        {
            var list2 = GetNewArrays(nums[i], nums[i + 1]);
            list.AddRange(list2);
            list2.Clear();
        }
        
        return list.ToArray();
    }

    static List<int> GetNewArrays(int count, int value)
    {
        var list = new List<int>();
        for (int i = 0; i < count; i++)
           list.Add(value);
        
        return list;
    }
}
