public class Solution {
    public int MaximumDifference(int[] nums) {
        
        if(nums.Length == 0 || nums.Length == 1){
            return 0;
        }

        int min = nums[0];
        int maxDifference = 0;
        for(int i = 0; i < nums.Length; i++){
            int val = nums[i] - min;
            if(val > maxDifference) maxDifference = val;
            if(nums[i] < min) min = nums[i];
        }
        if(maxDifference == 0)
            return -1;
            
        return maxDifference;
    }
}
