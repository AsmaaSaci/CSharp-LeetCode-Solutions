public class Solution {
    public long MaxAlternatingSum(int[] nums) {
        long n=nums.Length;
        long score=0;
        var arr=new long[n];
        for(int i=0;i<n;i++)
            arr[i]=(long)(Math.Pow(nums[i],2));

        Array.Sort(arr);
        for(int i=0;i<n/2;i++)
            score+=(arr[n-1-i]-arr[i]);

        if(nums.Length%2==1)
            score+=arr[n/2];
        return score;
    }
}
