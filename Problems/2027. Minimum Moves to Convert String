public class Solution {
    public int MinimumMoves(string s)
    {
        int ans = 0;
        bool flag = false;
        var ch = s.ToCharArray();
        for (int i = 0; i < ch.Length; i++)
        {
            flag = false;
            if (ch[i] == 'O')
            {
                continue;
            }
            if (ch[i] == 'X')
            {
                flag = true;
                ch[i] = 'O';
            }
            i++;
            if (i < ch.Length && ch[i] == 'X')
            {
                flag = true;
                ch[i] = 'O';
            }
            i++;
            if (i < ch.Length && ch[i] == 'X')
            {
                flag = true;
                ch[i] = 'O';
            }
            if (flag)
                ans++;
        }

        return ans;
    }
}
