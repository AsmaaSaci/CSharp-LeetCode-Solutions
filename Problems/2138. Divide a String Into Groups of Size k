public class Solution {
    public string[] DivideString(string s, int k, char fill) {
        int n = s.Length;
        int index = 0;
        string[] res = new string[(n - n%k) / k + ((n %k == 0) ? 0 : 1)];
        for(int i = 0; i< n - n%k; i+=k)
        {
            res[index] = s.Substring(i, k);
            index++;
        }
        if(n%k != 0) {
            res[index] = s.Substring(n-n%k);
            for(int i = 0; i < k - n%k; i++) res[index] += fill;
        }


        return res;
    }
}
