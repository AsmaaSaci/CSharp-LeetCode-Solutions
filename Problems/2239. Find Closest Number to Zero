public class Solution {
    public int FindClosestNumber(int[] nums) 
    {
        int res = 0;
        int distance = 0;
        for (int i = 0; i < nums.Length; i++)
        {
        	if (i == 0)
            {
                res = nums[i];
                distance = Math.Abs(res);
                continue;
            }
            if (Math.Abs(nums[i]) < distance)
            {
                res = nums[i];
                distance = Math.Abs(res);
                continue;
            }
            if (Math.Abs(nums[i]) == distance && nums[i] > 0)
                res = nums[i];
        }
        return res;
    }
}
