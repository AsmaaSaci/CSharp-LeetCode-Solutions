public class Solution {
    public long MinOperations(int[] nums1, int[] nums2) {
        long res = 0;
        int minDiff = int.MaxValue, len = nums1.Length, last = nums2[len];

        for(int i = 0; i < len; i++)
        {
            int diff = Math.Abs(nums1[i]-nums2[i]);
            res += diff;

            // append item1 first:
            int append1 = Math.Abs(last-nums1[i])+1;

            // adjast item1 first:
            int append2 = Math.Abs(last-nums2[i])+1;
            if(last >= nums1[i] && last <= nums2[i] || last >= nums2[i] && last <= nums1[i])
                minDiff = 1;

            minDiff = Math.Min(minDiff,  Math.Min(append1, append2));
        }

        res += minDiff;

        return res;
    }
}
