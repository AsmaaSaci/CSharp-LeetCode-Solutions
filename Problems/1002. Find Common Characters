 public class Solution {
    public IList<string> CommonChars(string[] words) {
        Dictionary<char, int> commonCount = new Dictionary<char, int>();

        // 1. Construct counter of the first word in words
        foreach(char letter in words[0]) {
            commonCount[letter] = commonCount.GetValueOrDefault(letter, 0) + 1;
        }

        // 2. Find letters that appear more than once
        for(int i = 0; i < words.Length; i++) {
            string word = words[i];
            Dictionary<char, int> wordCount = new Dictionary<char, int>();

            // Count occurrences of each letter in current word
            foreach(char letter in word) {
                wordCount[letter] = wordCount.GetValueOrDefault(letter, 0) + 1;
            }

            // Update the counts of common letters
            foreach(char letter in commonCount.Keys) {
                commonCount[letter] = Math.Min(
                    commonCount[letter],
                    wordCount.GetValueOrDefault(letter, 0)
                );
            }
        }

        // 3. Add the letters to the result based on the number of times seen
        IList<string> result = new List<string>();

        foreach(char letter in commonCount.Keys) {
            int count = commonCount[letter];
            for(int i = 0; i < count; i++) {
                result.Add(letter.ToString());
            }
        }

        return result;
    }
}
