public class Solution 
{
    public bool CheckXMatrix(int[][] grid) 
    {
        int forwardPointer = 0;
        int backwardPointer = grid[0].Length - 1;

        for (int i = 0; i < grid.Length; i++)
        {
            for (int j = 0; j < grid[i].Length; j++)
            {
                if (j == forwardPointer || j == backwardPointer)
                {
                    if (grid[i][j] == 0)
                    {
                        return false;
                    }
                }
                else
                {
                    if (grid[i][j] != 0)
                    {
                        return false;
                    }
                }
            }

            forwardPointer++;
            backwardPointer--;
        }

        return true;
    }
}
