public class Solution {
    public int LongestMonotonicSubarray(int[] nums) {
        int incmax = 1, decmax = 1;
        int n= nums.Length;
        int inc = 1, dec =1;

        for(int i=1; i<n; i++){
            if(nums[i]>nums[i-1]){
                inc++;
                dec = 1;
            }
            else if(nums[i] < nums[i-1]){
                dec++;
                inc= 1;
            }
            else{
                dec = 1; 
                inc=1;
            }
           incmax = inc> incmax? inc : incmax;
           decmax = dec> decmax? dec : decmax;
        }
        
        if(incmax> decmax){
            return incmax;
        }

        return decmax;
    }
}
