public class Solution {
    public bool SatisfiesConditions(int[][] grid) {
        int rows = grid.Length, cols = grid[0].Length;
        for(int i = 0; i < rows; i++)
        {
            for(int j = 0; j < cols; j++)
            {
                if(j < cols-1)
                {
                    if(grid[i][j] == grid[i][j+1])
                        return false;
                }

                if(i < rows-1)
                {
                    if(grid[i][j] != grid[i+1][j])
                        return false;
                }
            }
        }

        return true;
    }
}
