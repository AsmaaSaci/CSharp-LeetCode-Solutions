public class Solution {
    public int FindTheDistanceValue(int[] arr1, int[] arr2, int d) {
        int value = 0;
   int temp = 0;

   int k = 0;
   for (int i = 0; i < arr1.Length; i++)
   {
      while (k < arr2.Length)
      {
         temp = Math.Abs(arr1[i] - arr2[k]);
         
         if (temp <= d)
         {
            temp = -1;
            break;
         }

         k++;
      }

      if (temp != -1)
      {
         value++;
      }

      k = 0;
   }
   
   return value;
    }
}
