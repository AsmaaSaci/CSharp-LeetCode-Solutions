public class Solution {
    public string FirstPalindrome(string[] words) {
        foreach (string w in words) {
            int l = 0, r = w.Length - 1;
            bool isPal = true;
            while (l < r) {
                if (w[l] != w[r]) {
                    isPal = false;
                    break;
                }
                l++; r--;
            }
            if (isPal) return w;
        }
        return "";
    }
}
