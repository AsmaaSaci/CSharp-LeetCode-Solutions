public class Solution {
    public bool CheckOnesSegment(string s) {
        for (int i = 1; i < s.Length; i++) {
            if (s[i - 1] == '0' && s[i] == '1') {
                return false; // Found a new '1' segment after a '0'
            }
        }
        return true; // Only one segment of '1's
    }
}
