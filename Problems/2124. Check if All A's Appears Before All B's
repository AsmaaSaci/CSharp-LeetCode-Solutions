public class Solution {
    public bool CheckString(string s) {
        int first= s.IndexOf('b');
        int last=s.LastIndexOf('b');
        if(first==-1) return true;
        if(first!=last){
            for(int i=first;i<s.Length;i++){
                if(s[i]=='a'){
                return false;
                }
            }
        }
        else {
            for(int i=first;i<s.Length;i++){
                if(s[i]=='a'){
                    return false;
                }
            }
        }
        return true;
    }
}
