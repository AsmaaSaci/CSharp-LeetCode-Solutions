public class Solution {
    public string ReverseStr(string s, int k) {
        char[] sArr = s.ToCharArray();
        int sArrL = sArr.Length;

        for (int i = 0; i < sArrL; i += k * 2)
        {
            int start = i;
            int end = (i + k - 1 >= sArrL) ? sArrL - 1 : i + k - 1;
            while (start < end)
            {
                char tmp = sArr[start];
                sArr[start] = sArr[end];
                sArr[end] = tmp;

                start++;
                end--;
            }
        }

        return new string (sArr);
    }
}
