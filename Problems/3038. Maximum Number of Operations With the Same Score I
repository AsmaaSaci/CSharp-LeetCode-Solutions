public class Solution {
    public int MaxOperations(int[] nums) {
        int n = nums.Length % 2 != 0 ? nums.Length - 1 : nums.Length;
        int temp = nums[0] + nums[1];
        int count = 1;

        if (n == 2) return 1;

        for (int i = 2; i < n - 1; i += 2) {
            if (nums[i] + nums[i + 1] == temp)
                count++;
            else
                return count;
        }

        return count;
    }
}
