public class Solution {
    public int EarliestFinishTime(int[] landStart, int[] landDuration, int[] waterStart, int[] waterDuration) {
        //brute force
        int min=Int32.MaxValue;
        int n=landStart.Length;
        int m=waterStart.Length;
        for(int i=0;i<n;i++){
            //choose whichever starts first
            for(int j=0;j<m;j++){
                if(landStart[i]<waterStart[j]){
                    var time=(landStart[i]+landDuration[i]);
                    if(waterStart[j]>time){
                        time=(waterStart[j]+waterDuration[j]);
                    }else{
                        time+=waterDuration[j];
                    }
                    min=Math.Min(time,min);
                }else{
                    var time=(waterStart[j]+waterDuration[j]);
                    if(landStart[i]>time){
                        time=(landStart[i]+landDuration[i]);
                    }else{
                        time+=landDuration[i];
                    }
                    min=Math.Min(time,min);
                }
            }
        }
        return min;
    }
}
