public class Solution {
    public long CountAlternatingSubarrays(int[] nums) {
        long res=0;
        int n=nums.Length;
        int i=0,j=1;
        while(j<n)
        {
            if(nums[j]==nums[j-1]){
                i=j;
            }else{
                res+=(j-i);
            }
            j++;
        }
        return res+n;
        
    }
}
