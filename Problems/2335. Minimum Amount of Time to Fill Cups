public class Solution {
    public int FillCups(int[] amount) {

        // Raj Thomas 1st Dec 2025 5:37PM IST
        int time = 0;
        Array.Sort(amount);

        while(amount[1] > 0) {
            amount[1]--;
            amount[2]--;
            time++;

            Array.Sort(amount);
        }

        time += amount[2];
        return time;

    }
}
