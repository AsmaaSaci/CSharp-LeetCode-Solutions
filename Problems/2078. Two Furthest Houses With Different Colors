public class Solution {
    public int MaxDistance(int[] colors) {
        if(colors.Length == 0 || colors.Length == 1){
            return 0;
        }

        int min1 = colors[0];
        int min2 = colors[colors.Length-1];
        int distance1 = 0;
        int distance2 = 0;
        int result = 0;
        for(int i = 0; i < colors.Length; i++){
            if(colors[i] != min1){
                distance1 = Math.Abs(0-i);
            }

        }

        for(int i = colors.Length-1; i>=0; i--){
            if(colors[i] != min2){
                distance2 = Math.Abs((colors.Length-1)-i);
            }
        }

    if(distance1 == distance2 || distance1 > distance2 ){
        result = distance1;
    }
    else{
        result = distance2;
    }
    return result;
    }
}
