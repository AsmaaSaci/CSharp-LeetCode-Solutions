public class Solution {
    public int Verify(int nums1i, int n, int[] nums2){
        for(int i = 0; i < nums2.Length; i++){
            if(i >=n && nums2[i] > nums1i){
                return nums2[i];
            }
        }
        return -1;
    }

    public int[] NextGreaterElement(int[] nums1, int[] nums2) {
            for (int i = 0; i < nums1.Length; i++){
                int n = Array.IndexOf(nums2, nums1[i]) + 1;
                nums1[i] = Verify(nums1[i], n, nums2);
            } 
            return nums1;
        }
};
